# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000

# Frontend URL (for CORS and authentication)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Chess Engine Settings
DEFAULT_TIME_CONTROL=blitz
MAX_CONCURRENT_GAMES=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Database (if you plan to add persistence)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (for session storage in production)
# REDIS_URL=redis://localhost:6379

# WebSocket Configuration
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# Security
HELMET_CSP_ENABLED=true
CORS_CREDENTIALS=true

# Game Configuration
MAX_ROOM_IDLE_TIME=1800000
MAX_GAME_DURATION=7200000
CLEANUP_INTERVAL=300000