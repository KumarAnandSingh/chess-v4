# Frontend Environment Variables

# Backend API URL (production)
VITE_BACKEND_URL=https://your-backend-domain.railway.app

# WebSocket URL (usually same as backend)
VITE_WEBSOCKET_URL=https://your-backend-domain.railway.app

# Environment
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_SPECTATOR_MODE=true

# Game Configuration
VITE_DEFAULT_TIME_CONTROL=blitz
VITE_MAX_ROOM_CODE_LENGTH=4

# UI Configuration
VITE_THEME=default
VITE_ENABLE_SOUND=true
VITE_ENABLE_ANIMATIONS=true

# Monitoring
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=