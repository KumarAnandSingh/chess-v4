# Frontend Environment Variables - Production
# This file is used for Vercel deployment

# Backend API URL (Railway production)
VITE_BACKEND_URL=https://chess-v4-production.up.railway.app

# WebSocket URL (same as backend)
VITE_WEBSOCKET_URL=https://chess-v4-production.up.railway.app

# Environment
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT=true
VITE_ENABLE_SPECTATOR_MODE=true

# Game Configuration
VITE_DEFAULT_TIME_CONTROL=blitz
VITE_MAX_ROOM_CODE_LENGTH=4

# UI Configuration
VITE_THEME=default
VITE_ENABLE_SOUND=true
VITE_ENABLE_ANIMATIONS=true