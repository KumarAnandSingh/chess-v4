# Chess v4 Backend Configuration
# Copy this file to .env and update values as needed

# Server Configuration
NODE_ENV=development
PORT=3000

# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000,http://localhost:1420

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_EXPIRES_HOURS=24

# Security Configuration
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Game Configuration
DEFAULT_TIME_CONTROL=blitz
DEFAULT_INITIAL_TIME=300000
DEFAULT_INCREMENT=5000

# Matchmaking Configuration
MATCHMAKING_TIMEOUT_SECONDS=30
MAX_RATING_DIFFERENCE=200

# Room Configuration
ROOM_EXPIRATION_HOURS=24
MAX_ROOMS_PER_USER=3
ROOM_CLEANUP_INTERVAL_MINUTES=5

# Chat Configuration
MAX_CHAT_HISTORY=50
MAX_MESSAGE_LENGTH=500

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/chess_v4
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/chess-v4.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MINUTES=5

# Development Configuration
ENABLE_DEBUG_LOGS=true
ENABLE_CORS_ALL_ORIGINS=false