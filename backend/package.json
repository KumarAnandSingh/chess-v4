{
  "name": "chess-v4-backend",
  "version": "1.0.0",
  "description": "Chess v4 Backend - Enhanced multiplayer chess server with room invitation system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting not configured' && exit 0",
    "health": "curl -f http://localhost:3001/api/health",
    "build": "echo 'No build step required for Node.js' && exit 0",
    "deploy": "echo 'Deploy via Railway CLI or GitHub Actions'",
    "docker:build": "docker build -t chess-v4-backend .",
    "docker:run": "docker run -p 3001:3001 chess-v4-backend"
  },
  "keywords": [
    "chess",
    "multiplayer",
    "socket.io",
    "real-time",
    "rooms",
    "game"
  ],
  "author": "Chess v4 Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "chess.js": "^1.0.0-beta.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}